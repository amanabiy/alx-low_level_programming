#include "holberton.h"
#define NULL 0

/**
 * _strchr - locates a character in a string
 * @s: the string to be manipulated
 * @c: the character to be located
 * Returns: a pointer to the first occurence of the character c in s
 */

char *_strchr(char *s, char c)
{
	int i;

	for (i = 0; *(s + i) != '\0'; i++)
	{
		if (*(s + i) == c)
		{
			int *pointer;

			pointer = &*(s + i);
			return (pointer);
		}
	}
	else
		return (NULL);
}
